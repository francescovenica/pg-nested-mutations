{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2019",
    "lib": ["ES5", "ES6", "ESNext", "DOM", "ES2019"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"],
    "typeRoots": ["src/types", "./node_modules/@types", "./node_modules"],
    "moduleResolution": "node16",
    "baseUrl": "src",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
